<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DACAC"
    tools:context=".ProfileTab_Fragment">

    <EditText
        android:id="@+id/edtProfile2"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="390dp"
        android:background="#FF9E80"
        android:ems="10"
        android:hint="@string/profile_name"
        android:inputType="textMultiLine"
        android:paddingLeft="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/edtBio2"
        android:layout_width="345dp"
        android:layout_height="80dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="290dp"
        android:background="#FF9E80"
        android:ems="10"
        android:hint="@string/your_bio"
        android:inputType="textMultiLine"
        android:paddingLeft="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtProfile2" />

    <EditText
        android:id="@+id/edtProfession"
        android:layout_width="344dp"
        android:layout_height="43dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="324dp"
        android:background="#FF9E80"
        android:ems="10"
        android:hint="@string/your_profession"
        android:inputType="textNoSuggestions"
        android:paddingLeft="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtBio2" />

    <EditText
        android:id="@+id/edtHobbies2"
        android:layout_width="344dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="#FF9E80"
        android:ems="10"
        android:hint="@string/your_favourite_hobbies"
        android:inputType="textNoSuggestions"
        android:paddingLeft="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtProfession" />

    <EditText
        android:id="@+id/edtSports2"
        android:layout_width="346dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="#FF9E80"
        android:ems="10"
        android:hapticFeedbackEnabled="false"
        android:hint="@string/your_favourite_sports"
        android:inputType="textNoSuggestions|textPersonName"
        android:paddingLeft="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtHobbies2" />

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="#0097A7"
        android:padding="15dp"
        android:text="Press here: to Submit Edited Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:hint="@string/all_fields_are_required"
        app:layout_constraintBottom_toTopOf="@+id/btnInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="113dp"
        android:layout_height="76dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/bike_drawing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>