<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#818283"
    android:onClick="rootLayoutTapped"
    tools:context=".InstagramCloneMainPage">

    <EditText
        android:id="@+id/txtPassInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:background="#FFFF"
        android:ems="10"
        android:hint="@string/please_enter_a_password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserInstagram" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="115dp"
        android:layout_height="138dp"
        android:background="#818283"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bike_drawing" />

    <Button
        android:id="@+id/btnSignupInstagram"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="5dp"
        android:background="#8B8F8F"
        android:shadowDy="0"
        android:shadowRadius="15"
        android:text="@string/signup_new2"
        android:textColor="#36371B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/txtEmailInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="#FFFF"
        android:ems="10"
        android:hint="@string/please_enter_an_email"
        android:importantForAccessibility="yes"
        android:inputType="textAutoComplete|textEmailAddress"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textColorHint="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnLoginInstagram"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp"
        android:background="#25252B"
        android:shadowDy="0"
        android:text="@string/user_login"
        android:textColor="#FFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignupInstagram" />

    <EditText
        android:id="@+id/txtUserInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFFF"
        android:ems="10"
        android:hint="@string/please_enter_a_username"
        android:inputType="textPersonName|textAutoComplete"
        android:textAlignment="center"
        android:textColorHint="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailInstagram" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="370dp"
        android:layout_height="43dp"
        android:layout_marginTop="26dp"
        android:hint="@string/new_users_should_fill_the_fields_above_then_click_signup_new"
        android:inputType="none"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPassInstagram" />

</androidx.constraintlayout.widget.ConstraintLayout>